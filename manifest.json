{
  "manifest_version": 3,
  "name": "ChatMark â€“ Remember What Matters",
  "version": "2.0.1",
  "description": "Bookmark ChatGPT messages and pin entire chats with tags, making your conversations organized, searchable, and easy to revisit.",
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icons16.png",
      "48": "icons/icons48.png",
      "128": "icons/icons128.png"
    },
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content/index.js"],
      "css": ["assets/content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"],
  "host_permissions": ["https://chatgpt.com/c/*"]
}
