{
  "manifest_version": 3,
  "name": "ChatMark – Remember What Matters",
  "version": "1.1.0",
  "description": "Easily bookmark ChatGPT messages — skip the scrolling and get straight to what matters.",
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icons16.png",
      "48": "icons/icons48.png",
      "128": "icons/icons128.png"
    },
    "default_popup": "popup/index.html" 
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/c/*"],
      "js": ["content/index.js"],
      "css": ["assets/content.css"]
    }
  ],
  "permissions": ["activeTab"],
  "host_permissions": ["https://chatgpt.com/c/*"]
}
